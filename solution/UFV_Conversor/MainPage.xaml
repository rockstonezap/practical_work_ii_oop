<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UFV_Conversor.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Margin="0,20"
            Spacing="25">

            <!-- Navigation -->
            <Frame BackgroundColor="#fff"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill"
                   Padding="40,20">

                <Grid ColumnDefinitions="Auto,*">

                    <Image Source="ufv_logo.png"
                           HeightRequest="50"
                           Aspect="AspectFit"
                           SemanticProperties.Description="Logo for University Francisco de Vitoria"/>

                    <HorizontalStackLayout Grid.Column="1"
                                           HorizontalOptions="End"
                                           Spacing="40">

                        <Label VerticalOptions="Center"
                                FontSize="22"
                                Text="Privacy Policy"
                                TextColor="Black">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="GoToPrivacyPolicy"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <Label VerticalOptions="Center"
                                FontSize="22"
                                Text="Exit"
                                TextColor="Black">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Exit"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>

                </Grid>
            </Frame>

            <!-- Header -->
            <Frame BackgroundColor="#3A5A78"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill"
                   Padding="50,60">

                <Label HorizontalOptions="Center"
                        FontAttributes="Bold"
                        VerticalOptions="Center"
                        FontSize="60"
                        Text="Converter"
                        TextColor="White"/>
            </Frame>

            <!-- Main Content -->
            <Frame BackgroundColor="#D3D3D3"
                    Padding="0,50">

                <VerticalStackLayout Spacing="20"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Center">

                    <Button x:Name="RegisterBtn"
                            Text="SIGN UP"
                            FontSize="36"
                            WidthRequest="260"
                            BackgroundColor="#B0B0B0"
                            FontFamily="OpenSansBold"
                            TextColor="#fff"
                            HorizontalOptions="Center"
                            Clicked="GoToRegister"/>

                    <Button x:Name="LoginBtn"
                            Text="SIGN IN"
                            FontSize="36"
                            WidthRequest="260"
                            BackgroundColor="#B0B0B0"
                            FontFamily="OpenSansBold"
                            TextColor="#fff"
                            HorizontalOptions="Center"
                            Clicked="GoToLogin"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
