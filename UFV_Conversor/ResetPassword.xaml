<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UFV_Conversor.ResetPassword">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Margin="0,20"
            Spacing="25">
            
            <!-- Navigation -->
            <Frame BackgroundColor="#fff"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"
                Padding="40,20">

                <Grid ColumnDefinitions="Auto,*">
                    
                    <Image Source="ufv_logo.png"
                        HeightRequest="50"
                        Aspect="AspectFit"
                        SemanticProperties.Description="Logo for University Francisco de Vitoria" />
                        
                    <HorizontalStackLayout Grid.Column="1" 
                        HorizontalOptions="End"
                        Spacing="40" >

                        <Label VerticalOptions="Center" FontSize="22" Text="Home" TextColor="Black">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="ReturnToHomepage" />
                            </Label.GestureRecognizers>
                        </Label>

                        <Label VerticalOptions="Center" FontSize="22" Text="Exit" TextColor="Black">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Exit" />
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>

                </Grid>
            </Frame>

            <!-- Header -->
            <Frame BackgroundColor="{StaticResource AppHeader}"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"
                Padding="50,60" >

                <Label HorizontalOptions="Center" FontAttributes="Bold" VerticalOptions="Center" FontSize="60" Text="Converter" TextColor="White" />
            </Frame>

            <!-- Main Content -->
            <Frame BackgroundColor="#D3D3D3" Padding="0,50">  
                <VerticalStackLayout Spacing="30"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" >
                    
                    <Label FontSize="38">Insert your account details for password change:</Label>

                    <!-- Username -->
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Username"
                            FontSize="36"
                            WidthRequest="400" />

                        <Entry x:Name="checkUsername"
                            FontSize="26"
                            BackgroundColor="White"
                            TextColor="Black"
                            HeightRequest="70"
                            WidthRequest="400" />
                    </VerticalStackLayout>

                    <!-- Email -->
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Email"
                            FontSize="36"
                            WidthRequest="400" />

                        <Entry x:Name="checkEmail"
                            FontSize="26"
                            BackgroundColor="White"
                            TextColor="Black"
                            HeightRequest="70"
                            WidthRequest="400" />
                    </VerticalStackLayout>
                    
                    <!-- New Password -->
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Password"
                            FontSize="36"
                            WidthRequest="400" />

                        <Entry x:Name="newPassword"
                            FontSize="26"
                            BackgroundColor="White"
                            TextColor="Black"
                            HeightRequest="70"
                            WidthRequest="400" />
                    </VerticalStackLayout>

                    <!-- Copy of New Password -->
                    <VerticalStackLayout Spacing="20">
                        <Label Text="Confirm Password"
                            FontSize="36"
                            WidthRequest="400" />

                        <Entry x:Name="checkNewPassword"
                            FontSize="26"
                            BackgroundColor="White"
                            TextColor="Black"
                            HeightRequest="70"
                            WidthRequest="400" />
                    </VerticalStackLayout>

                    <!-- Login Button -->
                    <Button x:Name="LoginBtn"
                        Text="RESET PASSWORD"
                        FontSize="36"
                        WidthRequest="360"
                        BackgroundColor="#B0B0B0"
                        FontFamily="OpenSansBold"
                        TextColor="#fff"
                        HorizontalOptions="Center"
                        Clicked="ChangePassword" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
