<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UFV_Conversor.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UFV_Conversor"
    Shell.FlyoutBehavior="Disabled"
    Title="UFV_Conversor">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Privacy Policy"
        ContentTemplate="{DataTemplate local:PrivacyPolicy}" />

    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate local:Register}" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:Login}" />

    <ShellContent
        Title="Converter"
        ContentTemplate="{DataTemplate local:ConverterPage}" />
        
    <ShellContent
        Title="Recovery"
        ContentTemplate="{DataTemplate local:Recovery}" />

</Shell>
